<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>$(MSBuildProjectName.Replace(" ", "_").Replace(".EventSourcing.EventStore", ""))</RootNamespace>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\projections\by_correlation_id.js" />
    <None Remove="Assets\projections\cloud-events-by_source.js" />
    <None Remove="Assets\projections\cloud-events-subjects.js" />
    <None Remove="Assets\projections\cloud-events-types.js" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Assets\projections\cloud-events-by_source.js" />
    <EmbeddedResource Include="Assets\projections\cloud-events-subjects.js" />
    <EmbeddedResource Include="Assets\projections\by_correlation_id.js" />
    <EmbeddedResource Include="Assets\projections\cloud-events-types.js" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="EventStore.Client.Grpc.PersistentSubscriptions" Version="22.0.0" />
    <PackageReference Include="EventStore.Client.Grpc.ProjectionManagement" Version="22.0.0" />
    <PackageReference Include="EventStore.Client.Grpc.Streams" Version="22.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\abstractions\CloudStreams.Infrastructure.Abstractions.csproj" />
  </ItemGroup>

</Project>
