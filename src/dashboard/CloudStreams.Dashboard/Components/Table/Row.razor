@namespace CloudStreams.Dashboard.Components
@typeparam TData

<tr @onclick="OnClick" class="@RenderContext.Table.RowClass">
    <CellCollectionPresenter Item="@RenderContext.Item" />
</tr>
@code {

    ///<summary>
    /// Gets/sets the row's rendering context
    /// </summary>
    [Parameter]
    public RowRenderingContext<TData> RenderContext { get; set; } = null!;

    /// <summary>
    /// Gets/sets the callback to invoke when the row has been clicked
    /// </summary>
    [Parameter]
    public EventCallback OnClick { get; set; }

}