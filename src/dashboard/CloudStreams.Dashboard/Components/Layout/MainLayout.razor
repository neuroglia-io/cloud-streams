@namespace CloudStreams.Dashboard
@inherits LayoutComponentBase

<div class="page h-100 d-flex flex-column">    
    <nav class="header navbar navbar-expand-lg flex-row navbar-dark bg-dark-subtle">        
        <a class="navbar-brand d-flex flex-row align-items-center justify-content-center" href="#">        
            <svg class="logo" viewBox="0 0 2132 2132">
                <use xlink:href="#logo" />
            </svg>
            <span class="logo-typing">Cloud Streams</span>
        </a>
        <div class="navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Events
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <NavLink class="nav-link" href="events" Match="NavLinkMatch.All">
                                <span class="btn-label">List</span>
                            </NavLink>
                        </li>
                        <li>
                            <NavLink class="nav-link" href="events/timeline" Match="NavLinkMatch.All">
                                <span class="btn-label">Timeline</span>
                            </NavLink>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="gateways" Match="NavLinkMatch.All">
                        <span class="btn-label">Gateways</span>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="brokers" Match="NavLinkMatch.All">
                        <span class="btn-label">Brokers</span>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="subscriptions" Match="NavLinkMatch.All">
                        <span class="btn-label">Subscriptions</span>
                    </NavLink>
                </li>
            </ul>
        </div>
    </nav>
    <div class="content flex-grow d-flex flex-column p-3">
        @Body
    </div>
</div>