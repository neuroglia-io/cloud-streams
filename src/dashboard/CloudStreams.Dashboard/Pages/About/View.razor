@namespace CloudStreams.Dashboard.Components
@page "/about"

<PageTitle>Cloud Streams - About</PageTitle>

    <a class="navbar-brand" href="#">
        <div class="text-center">
            <svg class="logo logo-large" viewBox="0 0 2132 2132">
                <use xlink:href="#logo" />
            </svg>
            <h1 class="logo-typing">Cloud Streams</h1>
        </div>
    </a>

    <div class="container">
        <table class="table table-striped table-bordered my-3">
            <tbody>
                <tr>
                    <td>Version</td>
                    <td>
                        <a href="https://github.com/neuroglia-io/cloud-streams/releases" target="_blank"><span class="badge bg-primary">@typeof(MainLayout).Assembly.GetName().Version!.ToString(3)</span></a>
                    </td>
                </tr>
                <tr>
                    <td>License</td>
                    <td><a href="https://raw.githubusercontent.com/neuroglia-io/cloud-streams/main/LICENSE" target="_blank">Apache 2.0</a></td>
                </tr>
                <tr>
                    <td>Copyright</td>
                    <td>Copyright © 2022-Present The Cloud Streams Authors. All Rights Reserved.</td>
                </tr>
                <tr>
                    <td>Repository</td>
                    <td><a href="https://github.com/neuroglia-io/cloud-streams/" target="_blank">https://github.com/neuroglia-io/cloud-streams/</a></td>
                </tr>
                <tr>
                    <td>Website</td>
                    <td><a href="www.cloud-streams.io/" target="_blank">www.cloud-streams.io/</a></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="row mt-5">
        <div>
            <div class="text-center">
                <img src="img/github-logo.png" height="100" alt="Github logo" />
                <p class="mt-3">
                    A question, an idea, want to contribute?
                    <br />
                    Join in the fun on <a href="https://github.com/neuroglia-io/cloud-streams" target="_blank">Github</a>!
                    New contributors are welcome!
                </p>
            </div>
        </div>
    </div>